<div>
  <nav class="flex items-center justify-between flex-wrap bg-green-500 p-6">
    <div class="flex items-center flex-shrink-0 text-white mr-6">
      <%= link_to "Car Marketplace", root_path, class: "font-semibold text-xl tracking-tight" %>
    </div>
    <div class="block lg:hidden">
      <button id="nav-toggle" class="flex items-center px-3 py-2 border rounded text-teal-light border-teal-light hover:text-white hover:border-white">
        <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
      </button>
    </div>
    <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto hidden" id="nav-content">
      <div class="text-sm lg:flex-grow">
        <link_to "Home", root_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-lighter hover:text-white mr-4" %>
        <link_to "Posts", posts_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-lighter hover:text-white mr-4" %>
      </div>
      <div class="flex">
        <% if current_user %>
          <%= link_to 'New Post', new_post_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-lighter hover:text-white mr-4" %>
          <%= button_to 'Sign out', destroy_user_session_path, method: :delete, data: {turbo_method: :delete}, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-lighter hover:text-white" %>
        <% else %>
           <%= link_to 'Sign in', new_user_session_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-lighter hover:text-white" %>
          <%= link_to 'Sign up', new_user_registration_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-lighter hover:text-white" %>
        <% end %>
      </div>
    </div>
  </nav>
</div>

