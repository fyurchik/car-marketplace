<div class="p-4">
  <h1 class="text-2xl font-bold mb-4"><%= @post.brand %> <%= @post.model %></h1>

  <% if @post.image.attached? %>
    <%= image_tag @post.image, class: "w-100 h-100 mb-4" %>
  <% end %>

  <p class="mb-2"><%= @post.body_type %></p>
  <p class="mb-2"><%= @post.mileage %></p>
  <p class="mb-2"><%= @post.color %></p>
  <p class="mb-2"><%= @post.price %></p>
  <p class="mb-2"><%= @post.fuel %></p>
  <p class="mb-2"><%= @post.year %></p>
  <p class="mb-2"><%= @post.engine_capacity %></p>
  <p class="mb-2"><%= @post.phone_number %></p>
  <p class="mb-2"><%= @post.name %></p>

  <%= link_to 'Edit', edit_post_path(@post), class: "bg-blue-500 text-white px-4 py-2 rounded mr-2" %>
  <%= link_to 'Back', posts_path, class: "bg-gray-500 text-white px-4 py-2 rounded" %>
</div>