<div class="max-w-lg mx-auto p-6 bg-white shadow-md rounded-lg">
  <% if @post.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Oops!</strong>
      <span class="block sm:inline"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</span>
      <ul class="list-disc list-inside">
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @post, local: true, class: "space-y-6" do |form| %>
    
    <div class="mb-4">
      <%= form.label :brand, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :brand, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :model, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :model, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :body_type, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :body_type, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :mileage, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :mileage, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :color, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :color, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :price, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :price, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :fuel, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :fuel, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :year, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :year, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :engine_capacity, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :engine_capacity, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :phone_number, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :phone_number, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :image, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.file_field :image, class: "form-input w-full" %>
    </div>

    <%= form.hidden_field :status, value: :pending %>

    <div class="flex items-center justify-between">
      <%= form.submit "Save", class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>

  <% end %>
</div>
