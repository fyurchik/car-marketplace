<h1 class="text-3xl font-bold mb-6">All Posts</h1>

<div class="overflow-x-auto">
  <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
    <thead>
      <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
        <th class="py-3 px-6 text-left">Model</th>
        <th class="py-3 px-6 text-left">Status</th>
        <th class="py-3 px-6 text-left">Actions</th>
      </tr>
    </thead>
    <tbody class="text-gray-700 text-sm font-light">
      <% @posts.each do |post| %>
        <tr class="border-b border-gray-200 hover:bg-gray-100" id="<%= dom_id(post) %>">
          <td class="py-3 px-6"><%= post.model %></td>
          <td class="py-3 px-6" id="post-status-<%= post.id %>"><%= post.status.capitalize %></td>
          <td class="py-3 px-6">
            <div class="flex items-center space-x-4">
              <%= link_to 'View', admin_post_path(post), class: "text-indigo-500 hover:text-indigo-700" %> 
              <%= button_to 'Approve', approve_admin_post_path(post), method: :patch, class: "text-green-500 hover:text-green-700", data: { turbo_method: :patch } %> |
              <%= button_to 'Reject', reject_admin_post_path(post), method: :patch, data: { turbo_method: :patch }, class: "text-red-500 hover:text-red-700" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
