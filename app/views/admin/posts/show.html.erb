<h1 class="text-3xl font-bold mb-6">Post Details</h1>

<% if @post.image.attached? %>
  <%= image_tag @post.image, class: "w-48 h-48 object-cover mb-4 rounded-md" %>
<% end %>

<div class="bg-white shadow-md rounded-lg p-6 mb-6">
  <p class="text-lg font-semibold mb-2">Model: <%= @post.model %></p>
  <p class="text-lg font-semibold mb-2">Body Type: <%= @post.body_type %></p>
  <p class="text-lg font-semibold mb-2">Mileage: <%= @post.mileage %></p>
  <p class="text-lg font-semibold mb-2">Color: <%= @post.color %></p>
  <p class="text-lg font-semibold mb-2">Price: <%= @post.price %></p>
  <p class="text-lg font-semibold mb-2">Fuel: <%= @post.fuel %></p>
  <p class="text-lg font-semibold mb-2">Status: <%= @post.status.capitalize %></p>
</div>
